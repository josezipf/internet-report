<!DOCTYPE html>
<html>
<head>
    <title>Relatório de Tráfego</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .data-table {
            max-height: 400px;
            overflow-y: auto;
            margin-bottom: 20px;
        }
        .summary-card {
            border-left: 4px solid;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f8f9fa;
        }
        .summary-card.download {
            border-color: #0d6efd;
        }
        .summary-card.upload {
            border-color: #dc3545;
        }
        .summary-card.period {
            border-color: #6c757d;
        }
        .graph-container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .percentile-box {
            background-color: #f8f9fa;
            border-left: 4px solid #20c997;
            padding: 10px 15px;
            margin-bottom: 20px;
        }
        .gauge-container {
            background-color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            text-align: center;
            height: 100%;
        }
        .gauge-value {
            font-weight: bold;
            margin-top: 10px;
            font-size: 1.1rem;
        }
        .speed-badge {
            font-size: 0.9rem;
            padding: 0.35em 0.65em;
        }
        .interface-badge {
            font-size: 1rem;
            background-color: #6f42c1;
        }
        .timestamp {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0"><i class="bi bi-bar-chart-line"></i> Relatório de Tráfego</h1>
                <span class="badge interface-badge">
                    <i class="bi bi-ethernet"></i> {{ interface if interface else 'Todas interfaces' }}
                </span>
            </div>
            <div class="card-body">
                <!-- Cabeçalho com informações resumidas -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="summary-card period">
                            <h5 class="card-title"><i class="bi bi-clock-history"></i> Período</h5>
                            <p class="card-text mb-1">{{ period }} minutos</p>
                            <p class="timestamp mb-0">
                                {{ data.download[0].timestamp.strftime('%d/%m/%Y %H:%M') if data.download else '' }} 
                                a 
                                {{ data.download[-1].timestamp.strftime('%d/%m/%Y %H:%M') if data.download else '' }}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="summary-card download">
                            <h5 class="card-title"><i class="bi bi-download"></i> Máximo Download</h5>
                            <p class="card-text">
                                {% if data.download %}
                                    {% set max_down = data.download|max(attribute='value') %}
                                    <span class="badge bg-primary speed-badge">{{ "%.2f"|format(max_down.value) }} kbps</span>
                                    <span class="timestamp">{{ max_down.timestamp.strftime('%H:%M') }}</span>
                                {% else %}
                                    <span class="badge bg-secondary speed-badge">N/A</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="summary-card upload">
                            <h5 class="card-title"><i class="bi bi-upload"></i> Máximo Upload</h5>
                            <p class="card-text">
                                {% if data.upload %}
                                    {% set max_up = data.upload|max(attribute='value') %}
                                    <span class="badge bg-danger speed-badge">{{ "%.2f"|format(max_up.value) }} kbps</span>
                                    <span class="timestamp">{{ max_up.timestamp.strftime('%H:%M') }}</span>
                                {% else %}
                                    <span class="badge bg-secondary speed-badge">N/A</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Gráfico Principal -->
                <div class="graph-container">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0"><i class="bi bi-graph-up"></i> Tráfego da Interface</h4>
                        <div>
                            <span class="badge bg-primary me-2"><i class="bi bi-download"></i> Download</span>
                            <span class="badge bg-danger"><i class="bi bi-upload"></i> Upload</span>
                        </div>
                    </div>
                    <img src="data:image/png;base64,{{ graph }}" class="img-fluid" alt="Gráfico de Tráfego">
                </div>

                <!-- Gráficos de Gauge -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="gauge-container">
                            <h5><i class="bi bi-download"></i> Último Download</h5>
                            <img src="data:image/png;base64,{{ gauge_download }}" class="img-fluid" alt="Gauge Download">
                            <div class="gauge-value">
                                {{ "%.2f"|format(data.download[-1].value) if data.download else '0.00' }} kbps
                                <span class="badge bg-primary speed-badge ms-2">
                                    {{ data.download[-1].timestamp.strftime('%H:%M') if data.download else '' }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="gauge-container">
                            <h5><i class="bi bi-upload"></i> Último Upload</h5>
                            <img src="data:image/png;base64,{{ gauge_upload }}" class="img-fluid" alt="Gauge Upload">
                            <div class="gauge-value">
                                {{ "%.2f"|format(data.upload[-1].value) if data.upload else '0.00' }} kbps
                                <span class="badge bg-danger speed-badge ms-2">
                                    {{ data.upload[-1].timestamp.strftime('%H:%M') if data.upload else '' }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="gauge-container">
                            <h5><i class="bi bi-percent"></i> 95º Percentil</h5>
                            <img src="data:image/png;base64,{{ gauge_percentile }}" class="img-fluid" alt="Gauge Percentil">
                            <div class="gauge-value">
                                {{ "%.2f"|format(percentile.download) }} kbps
                                <span class="badge bg-success speed-badge ms-2">Download</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção de Estatísticas -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="bi bi-download"></i> Estatísticas Download</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <h6>Máximo</h6>
                                            <p class="fs-5">
                                                {% if data.download %}
                                                    {% set max_down = data.download|max(attribute='value') %}
                                                    <span class="badge bg-primary">{{ "%.2f"|format(max_down.value) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                        <div class="mb-3">
                                            <h6>Média</h6>
                                            <p class="fs-5">
                                                {% if data.download %}
                                                    {% set avg_down = data.download|sum(attribute='value')/data.download|length %}
                                                    <span class="badge bg-primary">{{ "%.2f"|format(avg_down) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <h6>95º Percentil</h6>
                                            <p class="fs-5">
                                                <span class="badge bg-success">{{ "%.2f"|format(percentile.download) }} kbps</span>
                                            </p>
                                        </div>
                                        <div class="mb-3">
                                            <h6>Último Valor</h6>
                                            <p class="fs-5">
                                                {% if data.download %}
                                                    <span class="badge bg-primary">{{ "%.2f"|format(data.download[-1].value) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h5 class="mb-0"><i class="bi bi-upload"></i> Estatísticas Upload</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <h6>Máximo</h6>
                                            <p class="fs-5">
                                                {% if data.upload %}
                                                    {% set max_up = data.upload|max(attribute='value') %}
                                                    <span class="badge bg-danger">{{ "%.2f"|format(max_up.value) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                        <div class="mb-3">
                                            <h6>Média</h6>
                                            <p class="fs-5">
                                                {% if data.upload %}
                                                    {% set avg_up = data.upload|sum(attribute='value')/data.upload|length %}
                                                    <span class="badge bg-danger">{{ "%.2f"|format(avg_up) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <h6>95º Percentil</h6>
                                            <p class="fs-5">
                                                <span class="badge bg-success">{{ "%.2f"|format(percentile.upload) }} kbps</span>
                                            </p>
                                        </div>
                                        <div class="mb-3">
                                            <h6>Último Valor</h6>
                                            <p class="fs-5">
                                                {% if data.upload %}
                                                    <span class="badge bg-danger">{{ "%.2f"|format(data.upload[-1].value) }} kbps</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N/A</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabelas de Dados -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="bi bi-table"></i> Dados de Download</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="data-table">
                                    <table class="table table-striped mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Horário</th>
                                                <th>Velocidade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for point in data.download|reverse %}
                                            <tr>
                                                <td>{{ point.timestamp.strftime('%H:%M:%S') }}</td>
                                                <td>
                                                    <span class="badge bg-primary">{{ "%.2f"|format(point.value) }} kbps</span>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h5 class="mb-0"><i class="bi bi-table"></i> Dados de Upload</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="data-table">
                                    <table class="table table-striped mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Horário</th>
                                                <th>Velocidade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for point in data.upload|reverse %}
                                            <tr>
                                                <td>{{ point.timestamp.strftime('%H:%M:%S') }}</td>
                                                <td>
                                                    <span class="badge bg-danger">{{ "%.2f"|format(point.value) }} kbps</span>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rodapé -->
                <div class="mt-4 d-flex justify-content-between">
                    <form action="/report" method="post">
                        <input type="hidden" name="host" value="{{ hostid }}">
                        <input type="hidden" name="interface" value="{{ interface }}">
                        <input type="hidden" name="period" value="{{ period }}">
                        <button type="submit" name="generate_pdf" value="true" class="btn btn-danger">
                            <i class="bi bi-file-earmark-pdf"></i> Gerar PDF
                        </button>
                    </form>
                    <a href="/" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                Relatório gerado em {{ current_datetime.strftime('%d/%m/%Y %H:%M:%S') }}
            </div>
        </div>
    </div>
</body>
</html>
